#ifndef INC_KALMAN_FNS_H_
#define INC_KALMAN_FNS_H_

#define ALPHA 0.98
#define DT  0.005

typedef struct {
  float pitch;
  float roll;
  float yaw;
} Orientation;

typedef struct {
  float pitchGyro;
  float rollGyro;
} angleGyro;

typedef struct {
  float pitchAcc;
  float roll_acc;
} angleAcc;

void updateOrientation(float accX, float accY, float accZ, float gyroX, float gyroY, float gyroZ);

float getPitch();

float getRoll();

float getYaw();

#endif /* INC_KALMAN_FNS_H_ */
